        {
            "parameters": {
                "resource": "codeTests",
                "operation": "generate",
                "sourceCode": "={{$node['Prepare File Data'].json['sourceCode']}}",
                "filename": "={{$node['Prepare File Data'].json['filename']}}",
                "testFramework": "auto-detect",
                "testType": "unit tests",
                "coverageLevel": "comprehensive"
            },
            "id": "generate-tests",
            "name": "Generate Tests",
            "type": "n8n-nodes-docuwriter-ai.docuWriter",
            "typeVersion": 1,
